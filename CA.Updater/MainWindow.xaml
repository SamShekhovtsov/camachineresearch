<Window x:Class="CA.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="525" 
        WindowStyle="None"  WindowState="Normal" WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="txbUpdateMessage" TextAlignment="Center" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" FontSize="16" FontWeight="DemiBold"></TextBlock>
        <ProgressBar Grid.Row="1" IsIndeterminate="True" Margin="20,20,20,40" />
    </Grid>
</Window>
